<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TabView-->
    <declare-styleable name="TabView">
        <attr name="text_size" format="dimension|reference" />
        <attr name="text_content" format="string|reference" />
        <attr name="text_normal_color" format="color|reference" />
        <attr name="text_select_color" format="color|reference" />
        <attr name="item_padding" format="dimension|reference" />
        <attr name="icon_normal" format="reference" />
        <attr name="icon_selected" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoopRotarySwitchView">
        <attr name="orientation" format="integer">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="autoRotation" format="boolean"/>
        <attr name="r" format="dimension"/>

        <attr name="direction" format="integer">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>

    </declare-styleable>
</resources>